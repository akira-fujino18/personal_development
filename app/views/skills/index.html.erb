<% Category.all.each do |category| %>
<div class = "skill-index-container">
  <div class = "skill-table">
    <div class = "skill-index-title">
      <h5><%= category.name %></h5>
<%= button_to "スキルを追加する", new_user_category_skill_path(current_user, category), method: :get, class: "blue-btn image-field", "data-turbo": "false" %>
    </div>
    <table>
  <tr>
    <th>習得スキル</th>
    <th>習得レベル</th>
    <th></th>
    <th></th>
  </tr>
<% Skill.where(user_id: current_user.id, category_id: category.id).each do |skill| %>
    <tr>
      <td><%= skill.name %></td>
      <td><%= skill.level %></td>
      <td><%= button_to "習得レベルを保存する", skills_path, class: "save-btn save", "data-turbo": "false" %></td>
      <td><%= button_to "スキルを削除する", skills_path, class: "delete-btn delete", "data-turbo": "false" %></td>
    <% end %>
    </tr>
  </table>
  </div>
</div>
<% end %>
